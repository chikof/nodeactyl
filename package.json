{
	"name": "@chikoshidori/nodeactyl",
	"version": "0.0.3",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"author": "ChikoShidori",
	"description": "NodeActyl is a Node.js library for Pterodactyl API.",
	"license": "MIT",
	"scripts": {
		"lint": "eslint src scripts --ext mjs,ts --fix",
		"format": "prettier --write --loglevel=warn {src,scripts}/**/*.ts",
		"prepare": "husky install .github/husky",
		"sversion": "standard-version",
		"update": "yarn up \"*\" -i",
		"docs": "typedoc",
		"cz": "git-cz",
		"prepublishOnly": "rollup-type-bundler -v -e url events",
		"build": "tsc -b src && rollup -c scripts/rollup.bundle.ts && gen-esm-wrapper dist/index.js dist/index.mjs"
	},
	"dependencies": {
		"@sapphire/fetch": "^2.4.1"
	},
	"devDependencies": {
		"@commitlint/cli": "17.1.2",
		"@commitlint/config-conventional": "17.1.0",
		"@favware/npm-deprecate": "^1.0.5",
		"@favware/rollup-type-bundler": "^1.0.11",
		"@sapphire/eslint-config": "4.3.8",
		"@sapphire/prettier-config": "1.4.4",
		"@sapphire/ts-config": "3.3.4",
		"@types/node": "17.0.0",
		"@typescript-eslint/eslint-plugin": "5.36.1",
		"@typescript-eslint/parser": "5.36.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.23.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "8.0.1",
		"lint-staged": "13.0.3",
		"prettier": "2.7.1",
		"pretty-quick": "3.1.3",
		"rollup": "^2.79.0",
		"rollup-plugin-version-injector": "^1.3.3",
		"standard-version": "9.5.0",
		"ts-node": "10.9.1",
		"typedoc": "0.23.14",
		"typescript": "4.8.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chikoshidori/nodeactyl.git"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"ansi-regex": "^5.0.1"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.3"
}
